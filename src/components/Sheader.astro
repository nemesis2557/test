<script>
    window.addEventListener('scroll', () => {
      const navbar = document.getElementById('navbar');
      if (!navbar) return; // Previene error si no existe
  
       if (window.scrollY > 50) {
      navbar.classList.remove('text-black');
      navbar.classList.add('text-white', 'bg-gray-800', 'bg-opacity-90', 'backdrop-blur');
      } else {
        navbar.classList.remove('text-white', 'bg-gray-800', 'bg-opacity-90', 'backdrop-blur');
        navbar.classList.add('text-black');
      }
    });
  </script>
