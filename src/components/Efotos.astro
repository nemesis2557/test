---
interface Props {
	title: string;
	body: string;
	img: string;
    img1:string;
    img2:string;
    img3:string;
    img4:string;
    img5:string;
    img6:string;
    img7:string;
    img8:string;
    img9:string;
    img10:string;
    textcolor:string;
}

const { title, body ,img ,img1 ,img2 ,img3,img4 ,img5,img6,img7,img8,img9,img10,textcolor} = Astro.props;
---

<section class="pt-20 flex justify-center">
    <article class={textcolor}>

        <!--portada --> 
        <div class="mx-8">
            <h1 class="text-3xl">{title}</h1>
            <p class="pt-6">{body}</p>
        </div>

        <!--Galeria -->
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2 m-8 relative z-10">
            <img src={img} alt="" class="rounded-lg">
            <img src={img1} alt="" class="rounded-lg">
            <img src={img2} alt="" class="rounded-lg">
            <img src={img3} alt="" class="rounded-lg">
            <img src={img4} alt="" class="rounded-lg">
            <img src={img5} alt="" class="rounded-lg">
            <img src={img6} alt="" class="rounded-lg">
            <img src={img7} alt="" class="rounded-lg">
            <img src={img8} alt="" class="rounded-lg">
            <img src={img9} alt="" class="rounded-lg">
            <img src={img10} alt="" class="rounded-lg">
            
        </div>
    </article>
    
</section>