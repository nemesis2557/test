---
interface Props {

	img: string;
    img1:string;
    img2:string;
    img3:string;
    img4:string;
    img5:string;
    textcolor:string;
}

const { img ,img1 ,img2 ,img3,img4,img5,textcolor} = Astro.props;
---

<section class="pt-2 mx-30">
    <article class={textcolor}>
        <!--Galeria -->
        <div class="grid grid-cols-1 gap-2 md:grid-cols-3">
            <img src={img} alt="" class="rounded-lg">
            <img src={img1} alt="" class="rounded-lg">
            <img src={img2} alt="" class="rounded-lg">
            <img src={img3} alt="" class="rounded-lg">
            <img src={img4} alt="" class="rounded-lg">
            <img src={img5} alt="" class="rounded-lg">
        </div>
    </article>
    
</section>